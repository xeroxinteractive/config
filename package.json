{
  "name": "@xerox/config",
  "version": "0.0.0",
  "description": "Monorepo for Xerox shareable configurations.",
  "repository": "git@github.com:xeroxinteractive/config.git",
  "author": "Andrew Leedham <andrew.leedham@xerox.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10 <=12",
    "npm": ">=5.0",
    "yarn": ">=1.15.2"
  },
  "scripts": {
    "lint": "eslint ./packages/**/*.js && prettier ./**/*.json --check",
    "format": "eslint ./packages/**/*.js --format && prettier ./**/*.json --write",
    "deploy": "yarn workspaces run semantic-release --branches release",
    "test": "jest --testPathIgnorePatterns packages && yarn workspaces run jest --passWithNoTests"
  },
  "commitlint": {
    "extends": [
      "./packages/xerox-commitlint-config/index.json"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "extends": [
      "./packages/xerox-eslint-config/index.js"
    ]
  },
  "prettier": "./packages/xerox-prettier-config/index.json",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-package-audit": "^3.1.2",
    "prettier": "^2.0.5",
    "semantic-release-plus": "^18.0.3"
  },
  "resolutions": {
    "acorn": ">=7.1.1",
    "kind-of": ">=6.0.3",
    "minimist": ">=1.2.3",
    "yargs-parser": ">=13.1.2 <14.0.0 || >=15.0.1 <16.0.0 || >=18.1.2",
    "dot-prop": ">=5.1.1"
  }
}
